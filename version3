#include <stdio.h>
#include <cstdlib>
#include <cstring>

const int nline = 20;
const int string = 1024;


void PrintData(char* text);

int main(int argc, char* argv[])
{
    if (argc == 2)
    {
        char* text[nline] = {};
        FILE* fp = fopen("text.txt","r");
        char buf[string] = {};
        char* ptr = NULL;
        for (size_t i = 0; i < (size_t)nline; i++)
        {
            fgets(buf, string, fp);
            ptr = (char*)calloc(strlen(buf) + 1, sizeof(char));
            strncpy(ptr, buf, string);
            text[i] = ptr;
        }
        PrintData((char*)text);
    }
    else
    {
        printf("HAHHAH");
    }
}
void PrintData(char* text)
{
    for (size_t i = 0; i < (size_t)string; i++)
    {
        printf("%s", text[i]);
    }
}
